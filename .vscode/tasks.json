{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PlatformIO: Build",
			"type": "shell",
			"command": "pio",
			"args": [
				"run"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		},
		{
			"label": "PlatformIO: Upload",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"upload"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		}
	]
}