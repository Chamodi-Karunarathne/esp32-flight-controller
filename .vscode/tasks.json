{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Web Dashboard",
			"type": "shell",
			"command": "pio",
			"args": ["run"],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			],
			"isBackground": false
		},
		{
			"label": "Upload Web Dashboard",
			"type": "shell",
			"command": "pio",
			"args": ["run", "--target", "upload"],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			],
			"isBackground": false
		}
	]
}